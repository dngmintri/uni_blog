@page "/"
@layout HomeLayout
@using frontend.Services
@inject PageTitleService PageTitleService

<PageTitle>Trang chủ - Uni Blog</PageTitle>

@code {
    protected override void OnInitialized()
    {
        PageTitleService.Title = "Trang chủ";
    }
}

<div class="hero-section">
    <div class="container">
        <div class="row align-items-center min-vh-100">
            <div class="col-lg-6">
                <div class="hero-content">
                    <h1 class="display-3 fw-bold text-white mb-4">Chào mừng đến với Uni Blog!</h1>
                    <p color="white" class="lead mb-4">Nơi chia sẻ kiến thức và kinh nghiệm học tập của sinh viên. Khám phá những bài viết thú vị và chia sẻ ý tưởng của bạn với cộng đồng.</p>
                    <div class="d-flex gap-3">
                        <a class="btn btn-primary btn-lg px-4" href="/dashboard" role="button">
                            <i class="fas fa-rocket me-2"></i>Bắt đầu ngay
                        </a>
                        <a class="btn btn-outline-light btn-lg px-4" href="/login" role="button">
                            <i class="fas fa-sign-in-alt me-2"></i>Đăng nhập
                        </a>
                    </div>
                </div>
            </div>
            <div class="col-lg-6">
                <div class="hero-image text-center">
                    <i class="fas fa-blog fa-10x text-primary opacity-75"></i>
                </div>
            </div>
        </div>
    </div>
</div>

<div class="features-section py-5">
    <div class="container">
        <div class="row">
            <div class="col-12 text-center mb-5">
                <h2 class="display-5 fw-bold text-dark">Tính năng nổi bật</h2>
                <p class="lead text-muted">Khám phá những gì Uni Blog mang lại cho bạn</p>
            </div>
        </div>
        <div class="row g-4">
            <div class="col-md-4">
                <div class="feature-card h-100 text-center p-4">
                    <div class="feature-icon mb-3">
                        <i class="fas fa-pen-fancy fa-3x text-primary"></i>
                    </div>
                    <h5 class="fw-bold">Viết bài</h5>
                    <p class="text-muted">Chia sẻ kiến thức và kinh nghiệm học tập của bạn một cách dễ dàng</p>
                </div>
            </div>
            <div class="col-md-4">
                <div class="feature-card h-100 text-center p-4">
                    <div class="feature-icon mb-3">
                        <i class="fas fa-users fa-3x text-success"></i>
                    </div>
                    <h5 class="fw-bold">Cộng đồng</h5>
                    <p class="text-muted">Kết nối với các sinh viên khác và học hỏi lẫn nhau</p>
                </div>
            </div>
            <div class="col-md-4">
                <div class="feature-card h-100 text-center p-4">
                    <div class="feature-icon mb-3">
                        <i class="fas fa-graduation-cap fa-3x text-warning"></i>
                    </div>
                    <h5 class="fw-bold">Học tập</h5>
                    <p class="text-muted">Tìm kiếm tài liệu và bài viết hữu ích cho việc học</p>
                </div>
            </div>
        </div>
    </div>
</div>

<style>
    .hero-section {
        background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
        color: white;
        position: relative;
        overflow: hidden;
    }
    
    .hero-section::before {
        content: '';
        position: absolute;
        top: 0;
        left: 0;
        right: 0;
        bottom: 0;
        background: url('data:image/svg+xml,<svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 100 100"><defs><pattern id="grain" width="100" height="100" patternUnits="userSpaceOnUse"><circle cx="25" cy="25" r="1" fill="white" opacity="0.1"/><circle cx="75" cy="75" r="1" fill="white" opacity="0.1"/><circle cx="50" cy="10" r="0.5" fill="white" opacity="0.1"/><circle cx="10" cy="60" r="0.5" fill="white" opacity="0.1"/><circle cx="90" cy="40" r="0.5" fill="white" opacity="0.1"/></pattern></defs><rect width="100" height="100" fill="url(%23grain)"/></svg>');
        opacity: 0.3;
    }
    
    .hero-content {
        position: relative;
        z-index: 2;
    }
    
    .hero-image {
        position: relative;
        z-index: 2;
    }
    
    .features-section {
        background: white;
    }
    
    .feature-card {
        background: white;
        border-radius: 15px;
        box-shadow: 0 5px 15px rgba(0,0,0,0.08);
        transition: transform 0.3s ease, box-shadow 0.3s ease;
        border: 1px solid #f0f0f0;
    }
    
    .feature-card:hover {
        transform: translateY(-5px);
        box-shadow: 0 15px 35px rgba(0,0,0,0.15);
    }
    
    .feature-icon {
        transition: transform 0.3s ease;
    }
    
    .feature-card:hover .feature-icon {
        transform: scale(1.1);
    }
</style>
